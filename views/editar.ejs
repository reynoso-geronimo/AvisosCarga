<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>
  <body class="flex-body">
    <%- include('./partials/nav') %>
      <main class="form-container">
        <form class="form-nuevo" action="/editar/<%= permiso.id %>" method="post" id="form">
          <label for="permiso">PERMISO</label>
          <input type="text" name="permiso" id="permiso" value="<%= permiso.permiso %>" />
          <label for="localidad">LOCALIDAD</label>
          <input type="text" name="localidad" id="localidad" value="<%= permiso.localidad %>" />
          <label for="direccion">DIRECCION</label>
          <input type="text" name="direccion" id="direccion" value="<%= permiso.direccion %>" />
          <label for="proximoAviso">PROXIMO AVISO</label>
          <input type="datetime-local" name="proximoAviso" id="proximoAviso" value=<% if (permiso.proximoAviso instanceof Date && !isNaN(permiso.proximoAviso.valueOf())) { %>
            <%= (new Date(permiso.proximoAviso.getTime() - (new Date().getTimezoneOffset() * 60000))).toISOString().slice(0, 16) %>
            <% } %>/>
          <button type="submit" class="btn-submit">
            <span class="btn-submit__text">EDITAR</span>
            <span class="btn-submit__icon"><img src="/img/check.svg" alt=""></span>
          </button>
        </form>
        <div id="spinner">
          <div class="square-10"></div>
        </div>
      </main>
      <script src="/js/validations.js"></script>
  </body>
</html>