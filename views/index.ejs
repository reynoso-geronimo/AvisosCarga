<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Avisos</title>
    <link rel="stylesheet" href="/css/style.css">
   
  </head>
  <body>
    <a href="/nuevo"><BUTton>NUEVO PERMISO</BUTton></a
    ><a href="/baja"><BUTton>HISTORIAL</BUTton></a>
    <section>
      <table id="tabla">
        <tr>
          <th>LEGAJO</th>
          <th>ULTIMO AVISO</th>
          <th>ADUANA</th>
          <th>LOCALIDAD</th>
          <th>DIRECCION</th>
          <th>PROXIMO AVISO</th>
          <TH>ESTADO</TH>
          <th>ACCIONES</th>
        </tr>
        <% permisos.forEach(permiso => { %>
        <tr>
          <td><%- permiso.permiso %></td>
          <td><%= permiso.ultimoAviso&&permiso.ultimoAviso.toLocaleString() %></td>
          <td><%- permiso.aduana %></td>
          <td><%- permiso.localidad %></td>
          <td><%- permiso.direccion %></td>
          <td><%= permiso.proximoAviso.toLocaleString()  %>  </td>
          <td><%- permiso.estado %></td>

          <td>
            <form
              onsubmit="return confirm('SEGURO QUE QUIERES BORRAR EL PERMISO <%= permiso.permiso %>');"
              action="/eliminar/<%= permiso.id %>"
              method="post"
            >
              <button type="submit">ELIMINAR</button>
            </form>
            <a href="/editar/<%= permiso.id %>"><button>EDITAR</button></a>
          </td>
        </tr>
        <% }) %>
      </table>
    </section>
  </body>
</html>
